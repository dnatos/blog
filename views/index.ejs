<% include partials/header %>

<div class="ui main text container">
	<div class="ui huge header">RESTful Blog App</div>
	<div class="ui top attached segmant">
		<div class="ui divided items">
			<%blogs.forEach(function(blog){ %>
				<div class="item">
					<div class="image">
						<img src="<%= blog.image %>">
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%=blog._id%>"><%= blog.title%> </a>
						<div class="meta">
							<span><%= blog.created.toDateString()%></span>
						</div>
						<div class="description">
							<p><%- blog.body.substring(0,100);%>...</p>
						</div>
						<div class="extra">
							<a class="ui floted basic violet button" href="/blogs/<%=blog._id%>">REAM MORE <i class="right chevron icon"></i></a>
						</div>
					</div>
				</div>
				
				<span><%= blog.created%></span>
				<p><%= blog.body.substring(0,100);%>...</p>
				<a href="/blogs/<%=blog._id%>">REAM MORE</a>
			
				</div>
			<%});%>
		</div>

	</div>

</div>





<% include partials/footer %>
